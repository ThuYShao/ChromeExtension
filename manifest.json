{
  "name": "THUIR Chrome Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A simple chrome extension to collect user behaviors",
  "icons": {
    "16": "popup/THUIR16.png",
    "32": "popup/THUIR32.png",
    "64": "popup/THUIR64.png",
    "128": "popup/THUIR128.png"
  },
  // 浏览器右上角图标设置
  "browser_action": {
    "default_title": "THUIR实验插件",
    "default_icon": "popup/THUIR19.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "unlimitedStorage",
    "storage",
    "cookies",
    "notifications"
  ],
  // 会一直常驻的后台JS或后台页面
  "background": {
    // 指定js 自动生成背景
    "scripts": [
      "jquery-3.3.1.min.js",
      "pako_deflate.min.js",
      "background.js"
    ]
  },
  // 需要直接注入页面的JS
  "content_scripts": [
    {
      "matches":["<all_urls>"], 
      "js": [
        "jquery-3.3.1.min.js",
        "pako_deflate.min.js"
      ], 
      "run_at": "document_start"
    },

    { 
      "matches": [
        "*://10.129.248.202/exp_domain_expertise*search/",
        "*://127.0.0.1/exp_domain_expertise*search/"
      ],
      "js": [
        "mouseMove.js",
        "basic.js",
        "page.js", 
        "content.js",
        "server.js"
      ],
      // 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
      "run_at": "document_start"
    },
    // content-script可以配置多个规则
    {
      "matches": [
        "*://www.sogou.com/web?*query=*",
        "*://www.sogou.com/websearch/sogou.jsp?*query=*"
      ],
      "js": [
        "mouseMove.js",
        "basic.js",
        "page.js",
        "content.js", 
        "sogou.js"
      ],
      "run_at": "document_start"
    }
  ]
}